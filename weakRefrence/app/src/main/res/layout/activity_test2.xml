<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.weakrefrence.Test2Activity">

    <TextView
        android:id="@+id/btn_strong_reference"
        android:layout_width="200dip"
        android:layout_height="100dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#00ff00"
        android:gravity="center"
        android:text="强引用" />

    <TextView
        android:id="@+id/btn_soft_reference"
        android:layout_width="200dip"
        android:layout_height="100dip"
        android:layout_below="@+id/btn_strong_reference"
        android:layout_centerHorizontal="true"
        android:background="#0000ff"
        android:gravity="center"
        android:text="软引用" />

    <TextView
        android:id="@+id/btn_weak_reference"
        android:layout_width="200dip"
        android:layout_height="100dip"
        android:layout_below="@+id/btn_soft_reference"
        android:layout_centerHorizontal="true"
        android:background="#00ff00"

        android:gravity="center"

        android:text="弱引用" />

    <TextView
        android:id="@+id/btn_weak_reference_list"
        android:layout_width="200dip"
        android:layout_height="100dip"
        android:layout_below="@+id/btn_weak_reference"
        android:layout_centerHorizontal="true"

        android:background="#ff0000"
        android:gravity="center"
        android:text="弱引用List" />

    <TextView
        android:id="@+id/btn_weak_reference_map"
        android:layout_width="200dip"
        android:layout_height="100dip"
        android:layout_below="@+id/btn_weak_reference_list"
        android:layout_centerHorizontal="true"
        android:background="#00ff00"
        android:gravity="center"
        android:text="弱引用WeakHashMap" />


</RelativeLayout>
